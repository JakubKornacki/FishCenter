<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/registerTextViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko_bold"
        android:text="@string/signUp2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.194" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="455dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextEmailRegisterActivity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/amiko_semibold"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:textAlignment="viewStart" />

        <ImageView
            android:id="@+id/username_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_alternate_email_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="390dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextPasswordRegisterActivity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/amiko_semibold"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textAlignment="viewStart" />

        <ImageButton
            android:id="@+id/passwordVisibleImageButtonRegisterActivity"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@null"
            android:padding="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_password_visible_toggle_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535">

        <EditText
            android:id="@+id/editTextReTypePasswordRegisterActivity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:ems="10"
            android:fontFamily="@font/amiko_semibold"
            android:hint="@string/reTypePassword"
            android:inputType="textPassword" />

        <ImageButton
            android:id="@+id/reTypePasswordVisibleImageButtonRegisterActivity"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@null"
            android:padding="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_password_visible_toggle_button" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/termsAndConditionsCheckBoxRegisterActivity"
        android:layout_width="235dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="252dp"
        android:text="@string/termsAndConditionsCheckBox"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonRegisterActivity"
        android:layout_width="299dp"
        android:layout_height="51dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="184dp"
        android:background="@drawable/button_rounded_corners"
        android:fontFamily="@font/amiko_bold"
        android:text="@string/signUp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/switchToLoginActivityRegisterActivity"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/userAlreadyHasAnAccount"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>